# Shopify Configuration
# Your Shopify store domain (e.g., your-store.myshopify.com)
SHOPIFY_STORE_DOMAIN=

# Shopify Admin API Access Token (requires B2B permissions)
# Generate from: Admin > Settings > Apps and sales channels > Develop apps
SHOPIFY_ADMIN_TOKEN=

# Shopify API Version (use latest stable version)
SHOPIFY_API_VERSION=2024-04

# Google Sheets Configuration
# The ID of your Google Sheet (found in the URL)
GOOGLE_SHEET_ID=

# Path to your Google Service Account credentials JSON file
GOOGLE_SERVICE_ACCOUNT_CREDENTIALS=

# Optional: Sheet name if different from default
GOOGLE_SHEET_NAME=

# Optional: Enable debug logging
DEBUG=false 